<h1>Create your task</h1>

<p>
  <%= form_for @task do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description, cols:40, row:7 %>
    </p>
    <p>
      <%= f.submit "Add" %>
    </p>
  <% end %>
</p>