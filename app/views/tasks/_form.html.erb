<p>
  <%= form_for @task do |f| %>
    <%= render 'shared/errors' %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description, cols:40, row:7 %>
    </p>
    <p>
      <%= f.submit "Add" %>
      <%= link_to "Cancel", tasks_path %>
    </p>
  <% end %>
</p>