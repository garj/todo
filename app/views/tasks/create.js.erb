$(".not-done").append("<%= j render @task %>");

$('#myModal').modal('hide');
$('.new-task-title').val("");
$('.new-task-description').val("");

$classname = $('.task<%=@task.id%>');

$($classname).iCheck({
    checkboxClass: 'icheckbox_flat',
    increaseArea: '20%'
});

$classname.css({'background-color':'#88ff88'}).animate({'background-color':'#FFFFFF'}, 1000);

