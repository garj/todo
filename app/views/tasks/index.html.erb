
<div class="col-md-offset-3">

  <div class="to-do-heading">
    <h3>To do</h3>    
  </div>
  
  <%= link_to "Add New Task", new_task_path, remote: true, class: "btn btn-primary add-new-task-button" %>

  <div class="add-task" style="clear: both;">
    <div class="form-horizontal">
      <%= form_for(Task.new, class: "to-do-form", remote: true) do |f| %>
        <div class="form-group">
          <%= f.label :title, class: "col-sm-3 control-label" %>
          <div class="col-sm-6">
            <%= f.text_field :title, autofocus: true, class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.label :description, class: "col-sm-3 control-label" %>
          <div class="col-sm-6">
            <%= f.text_area :description, cols:20, row:50, class: "form-control" %>
          </div>
        </div class="form-group">
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-6">
            <%= f.submit "Add" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  

  <div style="clear: both;">
    <%= form_tag complete_tasks_path, method: :put, remote: true do %>
      <div class="not-done">  
        <%= render @tasks_not_done %>
      </div>
      <div>
        <%= submit_tag "Mark As Complete", class: "btn btn-primary" %>
      </div>       
    <% end %>
  </div>
  
  <h3>Done</h3>
  <div class="done">
    <% @tasks_done.each do |t| %>
      <div>
        <%= check_box_tag(t.is_done) %>
          <%= link_to t.title, task_path(t), class: "task-item-done" %>
      </div>
    <% end %> 
  </div>

</div>