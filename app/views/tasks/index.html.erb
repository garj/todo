
<div class="col-md-offset-3">

  <div class="to-do-heading">
    <h3>To do</h3>    
  </div>
  
  <!-- Button to trigger modal -->
  <a href="#myModal" role="button" class="btn add-new-task-button" data-toggle="modal" data-target="#myModal">Add Task</a>

  <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h4 class="modal-title">Add New Task</h4>
        </div>
        <%= form_for(Task.new, remote:true) do |f| %>
          <div class="modal-body">
            <div class="row">
              <div class="col-xs-12">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control new-task-title", autofocus: true %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <%= f.label :description %>
                <%= f.text_field :description, class: "form-control new-task-description", rows: 3 %>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.submit "Add", class: "btn btn-success"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div style="clear: both;">
    <%= form_tag complete_tasks_path, method: :put, remote: true do %>
      <div class="not-done">  
        <%= render @tasks_not_done %>
      </div>
      <div>
        <%= submit_tag "Mark As Complete", class: "btn btn-primary" %>
      </div>       
    <% end %>
  </div>
  
  <h3>Done</h3>
  <div class="done">
    <%= render @tasks_done %>
  </div>
  
</div>