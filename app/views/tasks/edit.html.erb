<h1>Edit your task</h1>

<p>
  <%= form_for @task do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit "Update" %>
    </p>
  <% end %>
</p>

<p> <%= link_to "Home", tasks_path %> </p>
<p> <%= link_to "Delete Task", task_path(@task), method: :delete, data: {confirm: 'Are you sure'} %> </p>